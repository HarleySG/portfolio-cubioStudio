include ./views/shared/_mixin
<!DOCTYPE html>
html(lang="en")
    block config
        -var mainClass = 'on-betsknate'
        -var data = 'Betsknate'
        -var menu = [ {"link": './', "text": 'inicio'},  {"link": '#proposal', "text": 'marca'}, {"link": '#colors', "text": 'colores'}, {"link": '#elements', "text": 'elementos'}, {"link": '#aplicaciones', "text": 'aplicaciones'}, {"link": '#contact', "text": 'contacto'}]
        include ./views/shared/_head
    body
        main(id="app" class="o-main"+' '+mainClass)
            include ./views/shared/_header
            |
            include ./views/templates/betsknate/_welcome
            |
            include ./views/templates/betsknate/_record
            |
            include ./views/templates/betsknate/_preview
            |
            include ./views/templates/betsknate/_proposal
            |
            include ./views/templates/betsknate/_colors
            |
            include ./views/templates/betsknate/_elementos
            |
            include ./views/templates/betsknate/_aplicaciones
            |
            include ./views/templates/betsknate/_contact
            |
            include ./views/shared/_footer
            |
        div(class="mouse-tracker")
        |
        |
        include ./views/shared/_append