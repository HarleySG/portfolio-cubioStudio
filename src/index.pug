<!DOCTYPE html>
html(lang="en")
    block config
        -var data = 'lol'
        -var menu = [ {"link": '#about', "text": 'nosotros'}, {"link": '#works', "text": 'trabajos'}, {"link": '#enfoque', "text": 'enfoque'}, {"link": '#contact', "text": 'contacto'}]
        include ./templates/_head
    body
        main(id="app" class="o-main")
            include ./templates/_header
            |
            section.o-section(data-theme='gray')
                .o-wrapper
                    +headding('h1', 'Somos, un estudio de diseño Colombiano.', 'Creamos', 'productos digitales y marcas del futuro.')(class="js-scrollUp")
                .o-wrapper: +chevron()
                +mega_headding('CubioStudio')
            |
            |
            section.o-section(data-theme='gold' id="enfoque")(style="display: flex;")
                .o-wrapper
                    .blog-slider
                        .blog-slider__wrp.swiper-wrapper
                            .blog-slider__item.swiper-slide
                                .blog-slider__img: img(src='https://res.cloudinary.com/muhammederdem/image/upload/v1535759872/kuldar-kalvik-799168-unsplash.jpg' alt='')
                                .blog-slider__content: a.blog-slider__button(href='#') READ MORE
                            .blog-slider__item.swiper-slide
                                .blog-slider__img: img(src='https://res.cloudinary.com/muhammederdem/image/upload/v1535759871/jason-leung-798979-unsplash.jpg' alt='')
                                .blog-slider__content: a.blog-slider__button(href='#') READ MORE
                            .blog-slider__item.swiper-slide
                                .blog-slider__img: img(src='https://res.cloudinary.com/muhammederdem/image/upload/v1535759871/alessandro-capuzzi-799180-unsplash.jpg' alt='')
                                .blog-slider__content: a.blog-slider__button(href='#') READ MORE
                        .blog-slider__pagination
            section.o-section(data-theme='light' id="works")
                .o-wrapper
                    +headding('h1', 'Somos, un estudio de diseño Colombiano.', 'Creamos', 'productos digitales y marcas del futuro.')(class="js-scrollUp")

            |
            section.o-section(data-theme='light' id="about")
                .o-wrapper
            |
            section.o-section(data-theme='dark' id="contact")
                .o-wrapper
            |
            include ./templates/_footer
            |
            div(class="mouse-tracker")
        include ./templates/_append
